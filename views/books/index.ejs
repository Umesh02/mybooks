<h2>Search Books</h2>
<form action="/books" method="GET">
  <div>
    <label for="title">Title</label>
    <input
      type="text"
      id="title"
      name="title"
      value="<%= searchOptions.title %>"
    />
  </div>
  <div>
    <label for="title">Published After</label>
    <input
      type="date"
      id="publishedAfter"
      name="publishedAfter"
      value="<%= searchOptions.publishedAfter %>"
    />
  </div>
  <div>
    <label for="title">Published Before</label>
    <input
      type="date"
      id="publishedBefore"
      name="publishedBefore"
      value="<%= searchOptions.publishedBefore %>"
    />
  </div>
  <button type="submit">Search</button>
</form>
<br />
<div>
  <% books.forEach(book => { %>
  <!-- <div><%= book.name %></div> -->
  <img
    width="100"
    height="150"
    src="<%= book.coverImagePath %>"
    alt="book cover"
  />
  <% }) %>
</div>
