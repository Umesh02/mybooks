<h2 class="page-header">Search Books</h2>
<form action="/books" method="GET">
  <div class="form-row">
    <div class="form-item">
      <label for="title">Title</label>
      <input
        type="text"
        id="title"
        name="title"
        value="<%= searchOptions.title %>"
      />
    </div>
  </div>
  <div class="form-row">
    <div class="form-item">
      <label for="title">Published After</label>
      <input
        type="date"
        id="publishedAfter"
        name="publishedAfter"
        value="<%= searchOptions.publishedAfter %>"
      />
    </div>
    <div class="form-item">
      <label for="title">Published Before</label>
      <input
        type="date"
        id="publishedBefore"
        name="publishedBefore"
        value="<%= searchOptions.publishedBefore %>"
      />
    </div>
  </div>
  <div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit">Search</button>
  </div>
</form>
<br />
<div>
  <% books.forEach(book => { %>
  <!-- <div></div> -->
  <a href="/books/<%= book.id %>">
    <img
      width="100"
      height="150"
      src="<%= book.coverImagePath %>"
      alt="book cover"
  /></a>
  <% }) %>
</div>
